{
  "$id": "device.schema.json",
  "definitions": {
    "device": {
      "type": "object",
      "title": "device schema",
      "properties": {
        "_id": {
          "type": "string",
          "title": "The Tunnel Boring Machine Ressource Name in the format tbmrn::_tbm_id_::_automate_id_::block_id"
        },
        "constructionId": {
          "type": "string",
          "title": "The construction site ID"
        },
        "machineId": {
          "type": "string",
          "title": "The machine ID"
        },
        "equipmentId": {
          "type": "string",
          "title": "The equipment ID"
        },
        "enable": {
          "type": "boolean",
          "title": "Enable to accept incoming traffic from device"
        },
        "ip": {
          "type": "string",
          "title": "The ip address of the automate"
        },
        "rack": {
          "type": "integer",
          "title": "The rack number of the automate"
        },
        "slot": {
          "type": "integer",
          "title": "The slot number of the automate"
        },
        "period": {
          "type": "integer",
          "title": "The period of time between each periodical read jobs in seconds"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "title": "The date-time representing the moment the device was created"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "title": "The date-time representing the moment the device was updated"
        }
      },
      "required": [
        "_id",
        "constructionId",
        "machineId",
        "equipmentId",
        "enable",
        "ip",
        "rack",
        "slot",
        "period"
      ],
      "additionalProperties": false
    }
  }
}
